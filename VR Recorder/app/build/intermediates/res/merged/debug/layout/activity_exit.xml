<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smarticalapps.vr.video.recorder.exit">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/exit"
        android:background="@drawable/wantexit"
        android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/yes"
        android:background="@drawable/yes"
        android:layout_marginLeft="25dp"
        android:layout_above="@+id/no"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/no"
        android:background="@drawable/no"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="225dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/INCP"
            android:clickable="true"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="bottom" />
    </LinearLayout>
    <!--<ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/previous"
        android:background="@drawable/previous_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp" />-->
</RelativeLayout>
