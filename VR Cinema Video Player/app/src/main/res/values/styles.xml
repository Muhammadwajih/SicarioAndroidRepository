<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>
    </style>
    <style name="AppTheme.Translucent" parent="AppTheme.Base">
        <item name="colorPrimary">@color/app_primary_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/app_primary_accent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>
        <item name="actionBarSize">95dip</item>
        <item name="android:actionBarSize">95dip</item>
    </style>
    <style name="panel" parent="android:Theme.Holo.Light.Panel">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>
    </style>
</resources>
